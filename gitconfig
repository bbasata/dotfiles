[user]
email = bbasata@gmail.com
name = Baraa Basata

[credential]
helper = osxkeychain

[github]
user = bbasata

[alias]
annotate = blame
co = checkout
cor = !git for-each-ref --sort=-committerdate --format='%(refname:short) (%(committerdate:relative))' refs/heads | fzf --reverse --nth=1 --preview 'git log --patch --color {1}...{1}~5' | awk '{print $1}' | xargs git checkout
ci = commit
st = status
di = diff
dc = diff --cached
hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
type = cat-file -t
dump = cat-file -p

# Fancy logging.
#   h = head
#   hp = head with patch
#   r = recent commits, only current branch
#   ra = recent commits, all reachable refs
#   l = all commits, only current branch
#   la = all commits, all reachable refs
head = !git l -1
h = !git head
hp = "!. ~/.githelpers && show_git_head"
r = "!f() { : git log ; git l -30 "$@" ; }; f"
ra = !git r --all
l = "!. ~/.githelpers && pretty_git_log"
la = !git l --all
praise = blame
pushu = push -u origin head
up = sync

[color]
ui = true

[diff]
compactionHeuristic = true

[init]
templatedir = ~/.git_template

[push]
default = simple

